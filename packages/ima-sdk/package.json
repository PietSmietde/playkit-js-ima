{
  "name": "@playkit-js/playkit-js-ima",
  "version": "0.8.3",
  "main": "dist/playkit-ima.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production webpack",
    "clean": "rm -rf ./dist",
    "precommit": "lint-staged",
    "dev": "webpack-dev-server",
    "docs:generate": "documentation build ../../flow-typed/** src/** -f md -o docs/api.md",
    "docs:serve": "documentation serve ../../flow-typed/** src/** --watch",
    "eslint": "eslint . --color",
    "flow": "flow check",
    "pushTaggedRelease": "git push --follow-tags --no-verify origin master",
    "release": "standard-version",
    "test": "NODE_ENV=test karma start --color",
    "watch": "webpack --progress --colors --watch"
  },
  "dependencies": {
    "javascript-state-machine": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "eslint": "^3.10.0",
    "flow-bin": "latest",
    "karma-cli": "^1.0.1",
    "lint-staged": "7.0.5",
    "mocha-cli": "^1.0.1",
    "standard-version": "^4.0.0",
    "webpack": "latest",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "latest"
  },
  "peerDependencies": {
    "@playkit-js/playkit-js": "^0.37.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "kcc": {
    "name": "playkit-ima"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
